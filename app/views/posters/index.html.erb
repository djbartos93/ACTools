<p id="notice"><%= notice %></p>

<h1>Posters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Buy</th>
      <th>Sell</th>
      <th>Color 1</th>
      <th>Color 2</th>
      <th>Size</th>
      <th>Source</th>
      <th>Source notes</th>
      <th>Version</th>
      <th>Catalog</th>
      <th>Filename</th>
      <th>Internal</th>
      <th>Unique entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posters.each do |poster| %>
      <tr>
        <td><%= poster.name %></td>
        <td><%= poster.image %></td>
        <td><%= poster.buy %></td>
        <td><%= poster.sell %></td>
        <td><%= poster.color_1 %></td>
        <td><%= poster.color_2 %></td>
        <td><%= poster.size %></td>
        <td><%= poster.source %></td>
        <td><%= poster.source_notes %></td>
        <td><%= poster.version %></td>
        <td><%= poster.catalog %></td>
        <td><%= poster.filename %></td>
        <td><%= poster.internal_id %></td>
        <td><%= poster.unique_entry_id %></td>
        <td><%= link_to 'Show', poster %></td>
        <td><%= link_to 'Edit', edit_poster_path(poster) %></td>
        <td><%= link_to 'Destroy', poster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Poster', new_poster_path %>
